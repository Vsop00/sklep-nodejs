{{# if this.products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{#each products}}
                     <li class="list-group-item">
                        <span class="badge">{{this.qty}}</span>
                        <span style="font-weight: bold">{{this.item.title}}</span>
                        <span class="label label-success">PLN{{this.price}}</span>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Modyfikuj
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/reduce/{{this.item._id}}">Zmniejsz o 1</a>
                                <a class="dropdown-item" href="/remove/{{this.item._id}}">Usuń wszystkie</a>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <strong>Suma: {{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Zamów</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>Koszyk jest pusty!</h2>
        </div>
    </div>
{{/if}}